<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HerhalingsOefening.Views.SettingsView">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Start">
            <TableView Intent="Settings">
                <TableRoot>
                    <TableSection Title="Database settings">
                        <SwitchCell Text="Bij opstarten synchroniseren" />
                    </TableSection>
                </TableRoot>
            </TableView>
          <Button Text="Sync nu" VerticalOptions="Start"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>